---
import Tags from "@components/article/tags.astro";
import Layout from "@layouts/layout.astro";

const articles = await Astro.glob("../posts/*.md");
const tags = [...new Set(articles.map((post) => post.frontmatter.tags).flat())];

const pageTitle = "Aprendiendo | Etiquetas";
---

<Layout pageTitle={pageTitle}>
  <Tags tags={tags.sort()} />
</Layout>
