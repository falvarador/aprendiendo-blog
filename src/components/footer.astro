---
import FooterNavbar from "./footer_navbar.astro";
import Form from "./form.astro";
import Icon from "./icon.astro";
import Toggle from "./toggle.astro";

type Link = {
  name: string;
  username: string;
};

const links: Link[] = [
  {
    name: "discord",
    username: "aprendiendo",
  },
  {
    name: "twitter",
    username: "aprendiendo",
  },
  {
    name: "twitch",
    username: "aprendiendo",
  },
  {
    name: "youtube",
    username: "aprendiendo",
  },
  {
    name: "github",
    username: "aprendiendo",
  },
];
---

<footer
  class="flex w-full flex-col border-t-2 px-4 py-12 md:flex-row lg:justify-between xl:px-0"
>
  <aside class="md:w-2/4 lg:w-1/3">
    <h2 class="my-8 text-2xl font-medium">Aprendiendo</h2>

    <FooterNavbar />
  </aside>
  <aside class="md:w-2/4 lg:w-1/3">
    <h3 class="mt-8 mb-4 text-lg font-medium">Suscríbete al newsletter</h3>
    <p>
      Recibe nuestros consejos y artículos directamente en tu bandeja de
      entrada. Nada de spam 🙅🏻‍♂️
    </p>
    <Form />
    <h3 class="mt-8 mb-4 text-lg font-medium">Encuéntranos en</h3>
    <section>
      <ul class="blac flex flex-row justify-start space-x-4">
        {
          links.map((link) => (
            <li>
              <Icon name={link.name} username={link.username} />
            </li>
          ))
        }
      </ul>
    </section>
    <Toggle />
  </aside>
</footer>
