---
import Article from "@components/article/article.astro";

const articles = await Astro.glob("../../pages/posts/*.md");
---

<section class="mt-20 px-4 lg:px-0">
  <h2 class="text-2xl font-medium">Últimos artículos</h2>
  {
    articles.map((post) => (
      <Article
        author={post.frontmatter.author}
        description={post.frontmatter.description}
        title={post.frontmatter.title}
        url={post.url}
        image={post.frontmatter.image}
        pubDate={post.frontmatter.pubDate}
        tags={post.frontmatter.tags}
        timeToRead={post.frontmatter.timeToRead}
      />
    ))
  }
</section>
